# Site URL - Replace with your actual domain
NEXT_PUBLIC_SITE_URL=https://yourname.vercel.app

# Contact Form - Resend API Key
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Contact Email - Where form submissions will be sent
CONTACT_EMAIL=your.email@example.com

# Google Search Console Verification (optional)
GOOGLE_VERIFICATION_CODE=your_verification_code_here

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Admin Panel Credentials (copy these to a new file named .env.local)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password123
JWT_SECRET=super-secret-key-change-this-in-production
SESSION_COOKIE_NAME=admin_session
